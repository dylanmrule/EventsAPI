<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                Venues
            </th>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Zip Code
            </th>
            <th>
                Website
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Venues.Count; i++)
        {
            <tr>
                <td>       
                    @if (Model.Venues[i].Images.Count > 0)
                    {
                    <img src="@Url.Content(Model.Venues[i].Images[0].Url)" width="350px">
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Venues[i].Name)
                </td>

                
                    <td>
                        @Model.Venues[i].Address.Line1
                        @if(Model.Venues[i].Address.Line2 != null)
                        {
                            @Model.Venues[i].Address.Line2
                        }
                    </td>

                

                <td>
                    @Html.DisplayFor(modelItem => Model.Venues[i].City.Name)
                </td>
                
                    <td>
                        @Html.DisplayFor(modelItem => Model.Venues[i].State.StateCode)
                    </td>
                
                
                    <td>
                        @Html.DisplayFor(modelItem => Model.Venues[i].PostalCode)
                    </td>
                
                <td>
                    <a href="@Model.Venues[i].Url">@Model.Venues[i].Url</a>
                </td>
               


            </tr>
        }
        </table>

    <div>
        @if (Model.Page != 0)
        {
            if (Model.Page > 1)
            {
                <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="0"
                   class="btn btn-primary">First Page</a>
            }
            <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page - 1)"
               class="btn btn-primary">Previous Page</a>
        }
        <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page + 1)"
           class="btn btn-primary">Next Page</a>
    </div>