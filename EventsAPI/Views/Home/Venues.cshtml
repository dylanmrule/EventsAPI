@model VenuesResponse

@if (Model.Venues != null)
{
    <h3>Number of results displayed: @Model.Venues.Count</h3>
    <div>
        @if (Model.Page != 0)
        {
            if (Model.Page > 1)
            {
                <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="0"
                   class="btn btn-primary">First Page</a>
            }
            <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page - 1)"
               class="btn btn-primary">Previous Page</a>
        }
        <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page + 1)"
           class="btn btn-primary">Next Page</a>
    </div>
    @for (int i = 0; i < Model.Venues.Count; i++)
    {
        if (Model.Venues[i].Images.Count > 0)
        {
            <p><img src="@Url.Content(@Model.Venues[i].Images[0].Url)" width="350px"></p>
        }
        <h3>@Model.Venues[i].Name</h3>
        <p>@Model.Venues[i].Address.Line1</p>
        <p>@Model.Venues[i].Address.Line2</p>
        <p>@Model.Venues[i].City.Name, @Model.Venues[i].State.StateCode, @Model.Venues[i].PostalCode</p>
        <p><a href="@Model.Venues[i].Url">@Model.Venues[i].Url</a></p>
        <hr />
        @*if (Model.Favorites.Contains(Model.Venues[i].Name))
            {
                <a asp-action="DeleteFromFavorites" class="btn btn-danger"
                   asp-route-id="@Model.Venues[i].Name">Remove From Favorites</a>
            }
            else
            {
                <a asp-action="AddToFavorites" class="btn btn-primary"
                   asp-route-id="@Model.Venues[i].Name">Add To Favorites</a>
            }*@
    }

    <div>
        @if (Model.Page != 0)
        {
            if (Model.Page > 1)
            {
                <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="0"
                   class="btn btn-primary">First Page</a>
            }
            <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page - 1)"
               class="btn btn-primary">Previous Page</a>
        }
        <a asp-action="Venues2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page + 1)"
           class="btn btn-primary">Next Page</a>
    </div>
}

else
{
    <p>Those parameters are not compatible with the API.</p>
}
