@model Event

@{
    ViewData["Title"] = "EventDetails";
}

<h1>EventDetails</h1>

<div>
    <h4>Favorites</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Event: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Description: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Sart Date: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dates.Start.LocalDate)
        </dd>
        <dt class = "col-sm-2">
            Venue: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model._embedded.Venues[0].Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Favorites">Back to List</a>
</div>
