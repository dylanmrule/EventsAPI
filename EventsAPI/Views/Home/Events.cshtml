@model EventsResponse

<div>
    @if (Model.Page != 0)
    {
        if (Model.Page > 1)
        {
            <a asp-action="Events2" asp-route-link="@Model.PageLink" asp-route-page="0"
               class="btn btn-primary">First Page</a>
        }
        <a asp-action="Events2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page - 1)"
           class="btn btn-primary">Previous Page</a>
    }
    <a asp-action="Events2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page + 1)"
       class="btn btn-primary">Next Page</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Event Name
            </th>
            <th>
                Ticket Price Range
            </th>
            <th>
                Event Status
            </th>
            <th>
                Description
            </th>
            <th>
                Event Type
            </th>
            <th>
                Website
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Events.Count; i++)
        {
            <tr>
                <td>
                    <img src="@Url.Content(@Model.Events[i].Images[0].Url)" width="350px">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Events[i].Name)
                </td>

                @if (Model.Events[i].PriceRanges.Count > 0)
                {
                    <td>
                        $@Model.Events[i].PriceRanges[0].Min - $@Model.Events[i].PriceRanges[0].Max
                    </td>

                }

                <td>
                    @Html.DisplayFor(modelItem => Model.Events[i].Dates.Status.Code)
                </td>
                @if (Model.Events[i].Info != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => Model.Events[i].Info)
                    </td>
                }
                else
                {
                    <td>
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => Model.Events[i].Classifications[0].Segment.Name)
                </td>
                <td>
                    <a href="@Model.Events[i].Url">@Model.Events[i].Url</a>
                </td>
                <td>
                    @if (Model.Favorites.Contains(Model.Events[i].Id))
                    {
                        <a asp-action="DeleteFromFavorites" class="btn btn-danger"
                           asp-route-id="@Model.Events[i].Id">Remove From Favorites</a>
                    }
                    else
                    {
                        <a asp-action="AddToFavorites" class="btn btn-primary"
                           asp-route-id="@Model.Events[i].Id">Add To Favorites</a>
                    }
                </td>


            </tr>
        }
    </tbody>
</table>
<div>
    @if (Model.Page != 0)
    {
        if (Model.Page > 1)
        {
            <a asp-action="Events2" asp-route-link="@Model.PageLink" asp-route-page="0"
               class="btn btn-primary">First Page</a>
        }
        <a asp-action="Events2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page - 1)"
           class="btn btn-primary">Previous Page</a>
    }
    <a asp-action="Events2" asp-route-link="@Model.PageLink" asp-route-page="@(Model.Page + 1)"
       class="btn btn-primary">Next Page</a>
</div>



